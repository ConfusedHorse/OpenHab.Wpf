<Window x:Class="OpenHab.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:OpenHab.Wpf.View.Controls"
        xmlns:p="clr-namespace:OpenHab.Wpf.View.Properties"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Row="0" x:Name="Options">
            <!-- Options go here -->
        </Grid>

        <Grid Row="1" x:Name="Content">
            <!-- Content goes here -->
            
            <TabControl>
                <TabItem Header="{x:Static p:Resources.Things}">
                    <controls:ThingsControl/>
                </TabItem>
                <!--<TabItem Header="{x:Static p:Resources.Items}">
                    <controls:ItemsControl/>
                </TabItem>-->
            </TabControl>
            
            <!--TODO-->
        </Grid>
    </Grid>
</Window>
